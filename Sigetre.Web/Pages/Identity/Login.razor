@page "/login"
@layout HeadlessLayout
@inherits LoginPage

<PageTitle>Sigetre - Login</PageTitle>

<MudGrid Justify="Justify.FlexStart">
    <MudItem xs="12" sm="12" md="10" lg="8" xl="8" xxl="8">
        <MudPaper Class="mud-width-full pa-5">
            <div class="d-flex justify-center pb-6 pt-6">
                <MudImage Src="images/icon-192.png" Alt="Sigetre - Treinamentos" Width="250" Height="250"/>
            </div>
            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />
                
                <MudTextField
                    T="string"
                    Label="E-mail"
                    Placeholder="exemple@exemple.com"
                    Variant="Variant.Outlined"
                    Class="mb-3"
                    InputType="InputType.Email"
                    For="@(() => InputModel.Email)"
                    @bind-Value="InputModel.Email"/>
                <MudTextField
                    T="string"
                    Label="Senha"
                    Placeholder="Senha"
                    Variant="Variant.Outlined"
                    Class="mb-3"
                    InputType="InputType.Password"
                    For="@(() => InputModel.Password)"
                    @bind-Value="InputModel.Password" />

                <div class="d-flex mt-8">
                    <MudButton Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success" Class="mx-5">Enter</MudButton>
                    <MudSpacer />
                    <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/register" Class="mx-5">Register</MudButton>
                </div>
            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>