@page "/register"
@layout HeadlessLayout
@inherits RegisterPage  

<PageTitle>Sigetre - Register</PageTitle>

<MudGrid Justify="Justify.FlexStart">
    <MudItem xs="12" sm="12" md="10" lg="8" xl="8" xxl="8">
        <MudPaper Class="mud-width-full pa-4">
            <div class="d-flex justify-center pb-6 pt-6">
                <MudImage Src="images/icon-192.png" Alt="Sigetre - Treinamentos" Width="250" Height="250"/>
            </div>
            <MudForm @ref="MudForm">
                <MudTextField
                    T="string"
                    Label="Name"
                    InputType="InputType.Text"
                    Placeholder="Your name here"
                    Required="true"
                    RequiredError="Place your name"
                    Variant="Variant.Outlined"
                    Class="mb-3" />
                <MudTextField
                    T="string"
                    Label="Telephone"
                    InputType="InputType.Telephone"
                    Placeholder="Your telephone here"
                    Required="true"
                    RequiredError="Place your telephone"
                    Class="mb-3"
                    Variant="Variant.Outlined" />
                <MudTextField
                    T="string"
                    Label="E-mail"
                    InputType="InputType.Email"
                    Placeholder="exemple@exemple.com"
                    Required="true"
                    RequiredError="Place your E-mail"
                    Class="mb-3"
                    Variant="Variant.Outlined" />
                <MudTextField
                    T="string"
                    Label="Password"
                    InputType="InputType.Password"
                    Placeholder="Senha"
                    Required="true"
                    RequiredError="InvÃ¡lida password"
                    Class="mb-3"
                    Variant="Variant.Outlined" />
            </MudForm>
            @*<MudSelect T="" @bind-Value="" Label="Select your client" AnchorOrigin="Origin.BottomCenter" Variant="Variant.Outlined" Clearable>
            </MudSelect>*@

            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Success" Class="mx-5">Register</MudButton>
                <MudSpacer />
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Href="/login" Class="mx-5">Already have an account</MudButton>
            </div>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    
    MudForm? _mudForm;
    
}